
<% if obj.errors.any? %>
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card-panel amber accent-4">
          <ul>
            <% obj.errors.full_messages.each do |message| %>
              <li class="white-text"><%= message %>!</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>