<div class="row">
  <div class="col s12">
    <h3 class="center-align">COURSE LISTING</h3>
  </div>
</div>

<% @courses.each do |course| %>
 
<div class="row">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= course.short_name %></span>
        <p><%= course.description%></p>
      </div>
      <div class="card-action">
      <% if logged_in? && !current_student.courses.include?(course) %>
        <%= link_to "Enroll", enroll_path(course_id: course.id), method: :post %>
      <% end %>
        <a href="#">More information</a>
      </div>
    </div>
  </div>
<% end %>