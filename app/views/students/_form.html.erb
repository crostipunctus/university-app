

  <%= form_for @student do |f|%>
  <div class="row">
    <div class="input-field col s6">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="input-field col s6" >
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  </div>
  
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  </div>
    <%= f.submit class: "waves-effect waves-light btn"%>
  <% end %>
